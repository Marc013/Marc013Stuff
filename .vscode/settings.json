{
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "all",
  "editor.trimAutoWhitespace": true,
  "files.associations": {
    "**/pipelines/*.yaml": "azure-pipelines",
    "**/pipelines/*.yml": "azure-pipelines",
    "**/development/*.yaml": "azure-pipelines",
    "**/development/*.yml": "azure-pipelines"
  },
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.encoding": "utf8",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "json.schemas": [
    {
      "fileMatch": [
        "**/task.json"
      ],
      "url": "https://raw.githubusercontent.com/microsoft/azure-pipelines-task-lib/master/tasks.schema.json"
    },
    {
      "fileMatch": [
        "**/vss-extension.json"
      ],
      "url": "http://json.schemastore.org/vss-extension"
    }
  ],
  "markdownlint.config": {
    "MD007": {
      "indent": 4
    },
    "MD025": false
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "files.trimTrailingWhitespace": false
  }
}
